<h1>Files</h1>

<p>
  Say <%=link_to "Hello", say_hello_path%> again.
</p>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th>Size</th>
    </tr>
  </thead>
  <tbody>
    <%@dirs.each do |dir|%>
      <tr>
        <td>
          <b><%=dir%></b>
        </td>
      </tr>
    <%end%>
    
    <%@files.each do |file|%>
      <tr>
        <td>
          <%=file%>
        </td>
        <td>
          <%=File.size(file) / 1024%> kb
        </td>
      </tr>
    <%end%>
  </tbody>
</table>